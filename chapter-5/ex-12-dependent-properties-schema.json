{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"email": {
			"type": "string"
		},
		"firstName": {
			"type": "string"
		},
		"lastName": {
			"type": "string"
		},
		"tags": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"favoriteTopic": {
			"type": "string"
		}
	},
	"additionalProperties": false,
	"required": ["email", "firstName", "lastName"],
	"dependencies": {
		"favoriteTopic": ["tags"]
	}
}
